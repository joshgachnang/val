{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./built",
        "removeComments": false,
        "sourceMap":  true,
        "target": "es5"
    },
    "typeRoots": [ "node_modules/@types" ],
    "include": [
        "adapter.ts",
        "brain.ts",
        "config.ts",
        "envelope.ts",
        "frontend.ts",
        "listener.ts",
        "message.ts",
        "response.ts",
        "robot.ts",
        "room.ts",
        "server.ts",
        "user.ts",
				"adapters/*",
				"plugins/*",
        "test/*"
    ]
}
