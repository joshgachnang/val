{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        //"inlineSourceMap": true,
        "experimentalDecorators": true,
        "removeComments": false
    },
    "include": [
        "adapter.ts",
        "brain.ts",
        "config.ts",
        "envelope.ts",
        "frontend.ts",
        "listener.ts",
        "message.ts",
        "response.ts",
        "robot.ts",
        "room.ts",
        "server.ts",
        "user.ts",
        "adapters/*",
        "plugins/*",
        "test/*"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules/**/*",
        "app/**/*",
        "app/*"
    ]
}
